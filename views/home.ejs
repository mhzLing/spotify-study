    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
    <link rel="stylesheet" type="text/css" href="styles.css">
    <link rel="stylesheet" type="text/css" href="sp-bootstrap.min.css" media="screen">
    <script type="text/javascript" src="script.js"></script>
    <title>Spotify Study</title>
  </head>
  <body>
    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div id='top' class="jumbotron jumbotron-inverse jumbotron-hero sp-jumbotron-custom-inverse">
      <div class="container-fluid" id="jumbo-dialog">
        <h1 id='ttitle' >Spotify Study</h1>
        <p id='ttext'>
          Curated music playlist for studying.
        </p>
        <div class="container">
            <div class="row">

                <div class="col-lg-offset-4 col-sm-4">
                    <p class="lead "> Genre: </p>
                    <div id="genre-container">
                        <select id='genre' data-placeholder="Choose a genre"
                              class="form-control input-md" tabindex="2">
                              <option value='study'>Everything</option>
                              <option value='orchestra'>Classical</option>
                              <option value='white noise'>White Noise</option>
                              <option value='atmospheric'>Atmospheric</option>
                              <option value='electronic'>Electronic</option>
                              <option value='lofi'>Chill Hop</option>
                              <option value='jazz'>Jazz</option>
                              <option value='movie'>Soundtracks</option>
                        </select>
                    </div>
                </div>

                <!--
                <div id="subjectbox" class="col-sm-8">
                    <p class="lead"> Subject: </p>
                    <input id='message' type="text"
                        class="form-control input-md" placeholder="Type your subject">
                </div>
                -->
            </div>
        </div>
        <p><a class="btn btn-primary btn-lg" id='go' role="button" onclick=testing()>Search</a></p>
      </div>
    </div>

    <div class="container" id="results">
      <div><h2 id="playlistTitle">Popular Playlists</h2></div>
      <iframe id="playbtn1" src="" width="30%" height="380" frameborder="0" allowtransparency="true"></iframe>
      <iframe id="playbtn2" src="" width="30%" height="380" frameborder="0" allowtransparency="true"></iframe>
      <iframe id="playbtn3" src="" width="30%" height="380" frameborder="0" allowtransparency="true"></iframe>
      <!--
        <div id='buttons'>
            <span id="play-buttons" class="btn-group">
              <button id='playPrev' class="btn btn-default"><i class="glyphicon glyphicon-backward"></i></button> </li>
              <button id='playPlay' class="btn btn-default"><i class="glyphicon glyphicon-play"></i></button> </li>
              <button id='playNext' class="btn btn-default"><i class="glyphicon glyphicon-forward"></i></button> </li>
            </span>
            <button id='save' class="btn btn-primary pull-right">Save Playlist to Spotify</button>
        </div>


        <table id="song-table" class="table table-bordered table-striped table-hover">
            <thead> </thead>
            <tbody id="trows"> </tbody>
        </table>
      -->

    </div>
  </body>
</html>
